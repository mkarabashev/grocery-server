
{
    "extends": "standard",
    "env": {
      "node": true
    },
    "plugins": [
        "standard",
        "promise"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "rules": {
      "space-before-function-paren": 0,
      "no-return-assign": 0,
      "semi": [ 1, "always" ],
      "strict": [ 2, "safe" ]
    }
}
